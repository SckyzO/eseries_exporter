{
  "title": "NetApp E-Series - Hardware Monitoring",
  "uid": "eseries-hardware",
  "tags": [
    "netapp",
    "eseries",
    "storage",
    "hardware"
  ],
  "timezone": "",
  "schemaVersion": 41,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus"
      },
      {
        "name": "storage_system",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "query": "label_values(eseries_storage_system_status, instance)",
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "title": "Storage System Status",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "eseries_storage_system_status{instance=\"$storage_system\",status=\"optimal\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "OPTIMAL",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background"
      }
    },
    {
      "title": "Failed Components",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(eseries_drive_status{instance=\"$storage_system\",status!=\"optimal\"}) or vector(0)",
          "legendFormat": "Drives"
        },
        {
          "expr": "sum(eseries_power_supply_status{instance=\"$storage_system\",status!=\"optimal\"}) or vector(0)",
          "legendFormat": "PSU"
        },
        {
          "expr": "sum(eseries_fan_status{instance=\"$storage_system\",status!=\"optimal\"}) or vector(0)",
          "legendFormat": "Fans"
        },
        {
          "expr": "sum(eseries_battery_status{instance=\"$storage_system\",status!~\"optimal|learning\"}) or vector(0)",
          "legendFormat": "Batteries"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "title": "Drives Status Table",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "eseries_drive_status{instance=\"$storage_system\",status=\"optimal\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "instance": true,
              "job": true,
              "status": true
            },
            "renameByName": {
              "Value": "Status",
              "slot": "Slot",
              "tray": "Tray"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "center",
            "cellOptions": {
              "type": "color-background"
            }
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "FAILED",
                  "color": "red"
                },
                "1": {
                  "text": "OPTIMAL",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "title": "Power Supplies Status",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 3,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "min(eseries_power_supply_status{instance=\"$storage_system\",status=\"optimal\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "FAILED",
                  "color": "red"
                },
                "1": {
                  "text": "OK",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background"
      }
    },
    {
      "title": "Fans Status",
      "type": "stat",
      "gridPos": {
        "x": 15,
        "y": 0,
        "w": 3,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "min(eseries_fan_status{instance=\"$storage_system\",status=\"optimal\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "FAILED",
                  "color": "red"
                },
                "1": {
                  "text": "OK",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background"
      }
    },
    {
      "title": "Batteries Status",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 3,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "min(eseries_battery_status{instance=\"$storage_system\",status=~\"optimal|learning\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "FAILED",
                  "color": "red"
                },
                "1": {
                  "text": "OK",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background"
      }
    },
    {
      "title": "Cache Memory Status",
      "type": "stat",
      "gridPos": {
        "x": 21,
        "y": 0,
        "w": 3,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "min(eseries_cache_memory_dimm_status{instance=\"$storage_system\",status=\"optimal\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "FAILED",
                  "color": "red"
                },
                "1": {
                  "text": "OK",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background"
      }
    },
    {
      "title": "Component Status Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(eseries_drive_status{instance=\"$storage_system\",status=\"optimal\"})",
          "legendFormat": "Drives OK"
        },
        {
          "expr": "sum(eseries_power_supply_status{instance=\"$storage_system\",status=\"optimal\"})",
          "legendFormat": "PSU OK"
        },
        {
          "expr": "sum(eseries_fan_status{instance=\"$storage_system\",status=\"optimal\"})",
          "legendFormat": "Fans OK"
        },
        {
          "expr": "sum(eseries_battery_status{instance=\"$storage_system\",status=~\"optimal|learning\"})",
          "legendFormat": "Batteries OK"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    }
  ]
}
